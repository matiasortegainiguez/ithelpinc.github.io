{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "@codification/cutwater-build-core/includes/tsconfig-web.json",
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "lib",
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": ["es5", "es2015", "es2016", "dom"],
    "moduleResolution": "node",
    "paths": {
      "styles/*": [
        "src/styles/*"
      ],
      "images/*": [
        "src/images/*"
      ]
    },
    "types": [
      "node",
      "jest"
    ]
  },
  "include": ["src/**/*"]
}